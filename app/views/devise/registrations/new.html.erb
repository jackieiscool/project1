
<div class="box">
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, autofocus: true, :class => "form-control", placeholder: "E.G. frank@gmail.com" %></div>

  <div><br />
    <%= f.password_field :password, autocomplete: "off",:class => "form-control",placeholder: "Enter a password (min 6)" %></div>

  <div><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control", placeholder: "password confirmation" %>
  </div>
   <br>
  <div><%= f.submit "Sign up", :class => "btn btn-lg btn-warning" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>